{
  "name": "react-loadable-boilerplate",
  "version": "1.0.0",
  "description": "A bleeding-edge React boilerplate that offers code-splitting and server-side rendering",
  "main": "server/server.production.js",
  "repository": "https://github.com/mikebars/react-loadable-boilerplate.git",
  "author": "Mike Bars",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "compression": "^1.7.1",
    "express": "^4.16.1",
    "history": "^4.7.2",
    "mkdirp": "^0.5.1",
    "polished": "^1.9.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2",
    "rimraf": "^2.6.2",
    "styled-components": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.2.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.12.0",
    "file-loader": "^1.1.5",
    "flow-bin": "^0.59.0",
    "flow-typed": "^2.2.3",
    "jest": "^21.2.1",
    "prettier": "^1.8.2",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "stylelint": "^8.3.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.1.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.2",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-hot-server-middleware": "^0.3.0"
  },
  "scripts": {
    "--TOOLS--": "",
    "test": "yarn run jest",
    "jest": "jest --config tools/jest/config.jest.js --no-cache",
    "lint": "yarn run eslint && yarn run stylelint && yarn run prettier && yarn run flow",
    "eslint": "eslint --config tools/eslint/config.eslint.js ./",
    "flow": "flow check tools/flow",
    "flow-typed:install": "cd tools/flow && npx flow-typed install",
    "flow-typed:create-stub": "cd tools/flow && npx flow-typed create-stub",
    "prettier": "prettier --config tools/prettier/config.prettier.js --write \"./**/*.js\"",
    "stylelint": "stylelint --config tools/stylelint/config.stylelint.js \"**/*.js\"",
    "--DEVELOPMENT--": "",
    "development": "yarn run webpack:development && yarn run node:development",
    "node:development": "node --inspect server/server.development.js",
    "prewebpack:development": "yarn run rimraf:development && yarn run mkdirp:development",
    "mkdirp:development": "mkdirp client/development && mkdirp server/development",
    "rimraf:development": "rimraf client/development && rimraf server/development",
    "webpack:development": "yarn run webpack:client:development && yarn run webpack:server:development",
    "webpack:client:development": "webpack --config tools/webpack/client.development.config.webpack.js --profile --json > client/development/client.development.stats.webpack.json",
    "webpack:server:development": "webpack --config tools/webpack/server.development.config.webpack.js --profile --json > server/development/server.development.stats.webpack.json",
    "--PRODUCTION--": "",
    "production": "yarn run webpack:production && yarn run node:production",
    "node:production": "node server/server.production.js",
    "prewebpack:production": "yarn run rimraf:production && yarn run mkdirp:production",
    "mkdirp:production": "mkdirp client/production && mkdirp server/production",
    "rimraf:production": "rimraf client/production && rimraf server/production",
    "webpack:production": "yarn run webpack:client:production && yarn run webpack:server:production",
    "webpack:client:production": "webpack --config tools/webpack/client.production.config.webpack.js --profile --json > client/production/client.production.stats.webpack.json",
    "webpack:server:production": "webpack --config tools/webpack/server.production.config.webpack.js --profile --json > server/production/server.production.stats.webpack.json"
  }
}
